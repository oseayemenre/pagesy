{
    "swagger": "2.0",
    "info": {
        "title": "Pagesy API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8000",
    "basePath": "/api/v1",
    "paths": {
        "/books": {
            "post": {
                "description": "Uploads a book with metadata, schedule, draft chapter, and book cover image",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "books"
                ],
                "summary": "Upload a new book",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Book name",
                        "name": "name",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Book description",
                        "name": "description",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "collectionFormat": "csv",
                        "description": "Genres",
                        "name": "genre",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Book language",
                        "name": "language",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Draft chapter title",
                        "name": "chapter_title",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "Draft chapter content",
                        "name": "chapter_content",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "collectionFormat": "csv",
                        "description": "Release days (e.g. Monday, Tuesday)",
                        "name": "release_schedule_day",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "array",
                        "items": {
                            "type": "integer"
                        },
                        "collectionFormat": "csv",
                        "description": "Chapters per day (e.g. 1, 2)",
                        "name": "release_schedule_chapter",
                        "in": "formData",
                        "required": true
                    },
                    {
                        "type": "file",
                        "description": "Book cover image (max 3MB)",
                        "name": "book_cover",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/models.HandleUploadBooksRequest"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/models.ErrorResponse"
                        }
                    },
                    "413": {
                        "description": "Request Entity Too Large",
                        "schema": {
                            "$ref": "#/definitions/models.ErrorResponse"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/models.ErrorResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "models.Chapter": {
            "type": "object",
            "properties": {
                "content": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                }
            }
        },
        "models.ErrorResponse": {
            "type": "object",
            "properties": {
                "error": {
                    "type": "string"
                }
            }
        },
        "models.HandleUploadBooksRequest": {
            "type": "object",
            "required": [
                "chapterDraft",
                "description",
                "genres",
                "language",
                "name",
                "release_schedule"
            ],
            "properties": {
                "chapterDraft": {
                    "$ref": "#/definitions/models.Chapter"
                },
                "description": {
                    "type": "string"
                },
                "genres": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    }
                },
                "language": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "release_schedule": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "$ref": "#/definitions/models.Schedule"
                    }
                }
            }
        },
        "models.Schedule": {
            "type": "object",
            "properties": {
                "chapters": {
                    "type": "integer"
                },
                "day": {
                    "type": "string"
                }
            }
        }
    }
}