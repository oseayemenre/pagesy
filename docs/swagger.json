            }
        },
        "main.handleGetBooksSuccessEncoding.responseBook": {
            "type": "object",
            "properties": {
                "chapter_count": {
                    "type": "integer"
                },
                "description": {
                    "type": "string"
                },
                "genres": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "image": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "rating": {
                    "type": "number"
                },
                "release_schedule": {
                    "type": "array",
